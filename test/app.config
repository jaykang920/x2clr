<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="x2clr" type="x2.ConfigSection, x2clr"/>
  </configSections>

  <x2clr>
    <log level="Info"/>
    <buffer>
      <sizeExponent chunk="24" segment="12"/>
      <roomFactor minLevel="0" maxLevel="4"/>
    </buffer>
    <coroutine maxWaitHandles="1024" defaultTimeout="30.0"/>
    <flow>
      <logging>
        <slowHandler logLevel="Warning" threshold="100"/>
        <longQueue logLevel="Error" threshold="100"/>
      </logging>
    </flow>
    <link maxHandles="65536"/>
  </x2clr>
</configuration>